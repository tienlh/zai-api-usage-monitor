{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Z.ai Usage Monitor",
  "version": "1.0.0",
  "identifier": "com.zai.usage-monitor",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Z.ai Usage Monitor",
        "label": "main",
        "width": 420,
        "height": 480,
        "minWidth": 420,
        "minHeight": 480,
        "resizable": true,
        "hiddenTitle": false,
        "center": true,
        "decorations": true,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": false
  },
  "bundle": {
    "active": true,
    "targets": ["dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "public.app-category.utilities",
    "macOS": {
      "minimumSystemVersion": "10.13"
    }
  }
}
